<!--====| Gallery Start |====-->
<section class="galleri-wrapper section-padding fix-list">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h1>gallery</h1>
                <p class="slogan">fresh and healthy food available</p>
            </div>
        </div>
        <div class="row">
            <% (1..6).each do |album| %>
                <div class="col-xs-12 col-sm-6 col-md-6">
                    <div class="grid">
                        <figure class="effect-cheff gallary-image">
                            <img src="/frontend/img/gallery-01.jpg" alt="Gallery 01"/>
                            <figcaption>
                                <div class="gallary-hover-text">
                                    <p>
                                        <%= link_to 'chicken seasoned with herbs', erp_restaurant.gallery_detail_path %>
                                    </p>
                                </div>
                            </figcaption>     
                        </figure>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</section>
<!--====| Gallery End |====-->