<header class="header-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="logo">
                    <a title="Nguyễn Tôn Hùng - 1633514" href="<%= erp_restaurant.root_path %>">
                        <img id="logo" src="/frontend/img/logo.png" alt="Nguyen Ton Hung - 1633514">
                    </a>
                </div>
                <!-- /Logo -->
                <!-- =========================================
                Menu
                ========================================== -->
                <div class="navbar navbar-default mainnav">
                    <div class="navbar-header navbar-right pull-right">
                        <div id="offcanvas-trigger-effects" class="column">
                            <button type="button" class="navbar-toggle visible-sm visible-xs"
                                data-toggle="offcanvas"
                                data-target=".navbar-collapse"
                                data-placement="right"
                                data-effect="offcanvas-effect"> <i class="fa fa-bars"></i></button>
                        </div>
                        <!-- offcanvas-trigger-effects -->
                    </div>
                    <!-- .navbar-header -->

                    <div class="collapse navbar-collapse">
                        <ul class="nav navbar-nav navbar-right">
                            <li class="<%= 'active' if params[:controller] == 'erp/restaurant/frontend/home' && params[:action] == 'index' %>">
                                <a href="<%= erp_restaurant.root_path %>">Trang chủ</a>
                            </li>
                            <li class="<%= 'active' if params[:controller] == 'erp/restaurant/frontend/information' && params[:action] == 'about_us' %>">
                                <a href="<%= erp_restaurant.about_us_path %>">Giới thiệu</a>
                            </li>
                            <li class="<%= 'active' if params[:controller] == 'erp/restaurant/frontend/food_menu' %>">
                                <a href="<%= erp_restaurant.food_menu_path %>">Thực đơn </a>
                            </li>
                            <li class="<%= 'active' if params[:controller] == 'erp/restaurant/frontend/reservation' %>">
                                <a href="<%= erp_restaurant.reservation_path %>">Đặt bàn </a>
                            </li>
                            <li class="<%= 'active' if params[:controller] == 'erp/restaurant/frontend/gallery' %>">
                                <a href="<%= erp_restaurant.gallery_path %>">Hình ảnh </a>
                            </li>
                            <li class="<%= 'active' if params[:controller] == 'erp/restaurant/frontend/blog' %>">
                                <a href="<%= erp_restaurant.blog_path %>">Tin tức </a>
                            </li>
                            <li class="<%= 'active' if params[:controller] == 'erp/restaurant/frontend/information' && params[:action] == 'contact_us' %>">
                                <a href="<%= erp_restaurant.contact_us_path %>">Liên hệ</a>
                            </li>
                            <li><i id="search" class="flaticon-search74"></i></li>
                        </ul>
                        <!-- .navbar-nav -->
                    </div>
                    <!-- .navbar-collapse -->
                </div>
                <!-- .navbar -->
            </div>
            <!-- .col-xs-12 -->
        </div>
        <!-- .row -->
    </div>
    <!-- .container -->
</header>